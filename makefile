WORKDIR = `pwd`

CC = gcc
CXX = g++
AR = ar
LD = g++
WINDRES = windres

ARCH := $(shell arch)
$(info Processor architecture $(ARCH) detected.)

ifeq ($(ARCH), arm)
  AFLAGS = -mfpu=neon -mfloat-abi=softfp
else ifeq ($(ARCH), x86_64)
  AFLAGS =
else ifeq ($(ARCH), i386)
  AFLAGS =
else
  AFLAGS =
endif

INC = 
CFLAGS = $(AFLAGS) -w -D_PIN_CORE -D_CPULOAD_CNTR
RESINC = 
LIBDIR = 
LIB = -pthread
LDFLAGS =

INC_DEBUG = $(INC)
CFLAGS_DEBUG = $(CFLAGS) -g -D_DEBUG
RESINC_DEBUG = $(RESINC)
RCFLAGS_DEBUG = $(RCFLAGS)
LIBDIR_DEBUG = $(LIBDIR)
LIB_DEBUG = $(LIB)
LDFLAGS_DEBUG = $(LDFLAGS)
OBJDIR_DEBUG = obj/Debug
DEP_DEBUG = 
OUT_DEBUG = bin/Debug/epebench

INC_RELEASE = $(INC)
CFLAGS_RELEASE = $(CFLAGS) -O2
RESINC_RELEASE = $(RESINC)
RCFLAGS_RELEASE = $(RCFLAGS)
LIBDIR_RELEASE = $(LIBDIR)
LIB_RELEASE = $(LIB)
LDFLAGS_RELEASE = $(LDFLAGS) -s
OBJDIR_RELEASE = obj/Release
DEP_RELEASE = 
OUT_RELEASE = bin/Release/epebench

OBJ_DEBUG = $(OBJDIR_DEBUG)/cpu_status.o $(OBJDIR_DEBUG)/ebloads.o $(OBJDIR_DEBUG)/ebmodels.o $(OBJDIR_DEBUG)/main_ebench.o

OBJ_RELEASE = $(OBJDIR_RELEASE)/cpu_status.o $(OBJDIR_RELEASE)/ebloads.o $(OBJDIR_RELEASE)/ebmodels.o $(OBJDIR_RELEASE)/main_ebench.o

all: debug release

clean: clean_debug clean_release

before_debug: 
	test -d bin/Debug || mkdir -p bin/Debug
	test -d $(OBJDIR_DEBUG) || mkdir -p $(OBJDIR_DEBUG)

after_debug: 
	cp ebmodels.ini bin/Debug

debug: before_debug out_debug after_debug

out_debug: before_debug $(OBJ_DEBUG) $(DEP_DEBUG)
	$(LD) $(LIBDIR_DEBUG) -o $(OUT_DEBUG) $(OBJ_DEBUG)  $(LDFLAGS_DEBUG) $(LIB_DEBUG)

$(OBJDIR_DEBUG)/cpu_status.o: cpu_status.cpp
	$(CXX) $(CFLAGS_DEBUG) $(INC_DEBUG) -c cpu_status.cpp -o $(OBJDIR_DEBUG)/cpu_status.o

$(OBJDIR_DEBUG)/ebloads.o: ebloads.cpp
	$(CXX) $(CFLAGS_DEBUG) $(INC_DEBUG) -c ebloads.cpp -o $(OBJDIR_DEBUG)/ebloads.o

$(OBJDIR_DEBUG)/ebmodels.o: ebmodels.cpp
	$(CXX) $(CFLAGS_DEBUG) $(INC_DEBUG) -c ebmodels.cpp -o $(OBJDIR_DEBUG)/ebmodels.o

$(OBJDIR_DEBUG)/main_ebench.o: main_ebench.cpp
	$(CXX) $(CFLAGS_DEBUG) $(INC_DEBUG) -c main_ebench.cpp -o $(OBJDIR_DEBUG)/main_ebench.o

clean_debug: 
	rm -f $(OBJ_DEBUG) $(OUT_DEBUG)
	rm -rf bin/Debug
	rm -rf $(OBJDIR_DEBUG)

before_release: 
	test -d bin/Release || mkdir -p bin/Release
	test -d $(OBJDIR_RELEASE) || mkdir -p $(OBJDIR_RELEASE)

after_release:
	cp ebmodels.ini bin/Release

release: before_release out_release after_release

out_release: before_release $(OBJ_RELEASE) $(DEP_RELEASE)
	$(LD) $(LIBDIR_RELEASE) -o $(OUT_RELEASE) $(OBJ_RELEASE)  $(LDFLAGS_RELEASE) $(LIB_RELEASE)

$(OBJDIR_RELEASE)/cpu_status.o: cpu_status.cpp
	$(CXX) $(CFLAGS_RELEASE) $(INC_RELEASE) -c cpu_status.cpp -o $(OBJDIR_RELEASE)/cpu_status.o

$(OBJDIR_RELEASE)/ebloads.o: ebloads.cpp
	$(CXX) $(CFLAGS_RELEASE) $(INC_RELEASE) -c ebloads.cpp -o $(OBJDIR_RELEASE)/ebloads.o

$(OBJDIR_RELEASE)/ebmodels.o: ebmodels.cpp
	$(CXX) $(CFLAGS_RELEASE) $(INC_RELEASE) -c ebmodels.cpp -o $(OBJDIR_RELEASE)/ebmodels.o

$(OBJDIR_RELEASE)/main_ebench.o: main_ebench.cpp
	$(CXX) $(CFLAGS_RELEASE) $(INC_RELEASE) -c main_ebench.cpp -o $(OBJDIR_RELEASE)/main_ebench.o

clean_release: 
